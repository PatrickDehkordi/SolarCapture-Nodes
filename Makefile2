SC_VER_MAJ ?= 1
EXECS      := c_api c_api_with_tap
CFLAGS     := -Werror $(CWARNINGS) -g -O2 -DNDEBUG
SC_LINK    := -lsolarcapture${SC_VER_MAJ}

all: $(EXECS)

%.o: %.c
	$(CC) $(CFLAGS) -o $@ -c $<

$(EXECS): % : %.o
	$(CC) $(CFLAGS) $< $(SC_LINK) -o $@

clean:
	rm -rf *.o $(EXECS)
